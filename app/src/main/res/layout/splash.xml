<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/start_back_color"

    tools:context="stellarnear.lost_ark_companion.Activities.SplashActivity">

    <ImageView
        android:id="@+id/splash_under1"
        android:layout_width="@dimen/splash_logo"
        android:layout_height="@dimen/splash_logo"
        android:layout_gravity="center"
        android:src="@drawable/splash_under1" />

    <ImageView
        android:id="@+id/splash_under2"
        android:layout_width="@dimen/splash_logo"
        android:layout_height="@dimen/splash_logo"
        android:layout_gravity="center"
        android:src="@drawable/splash_under2" />

    <ImageView
        android:id="@+id/splash_above1"
        android:layout_width="@dimen/splash_logo"
        android:layout_height="@dimen/splash_logo"
        android:layout_gravity="center"
        android:src="@drawable/splash_above1"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/splash_above2"
        android:layout_width="@dimen/splash_logo"
        android:layout_height="@dimen/splash_logo"
        android:layout_gravity="center"
        android:src="@drawable/splash_above2"
        android:visibility="invisible" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
